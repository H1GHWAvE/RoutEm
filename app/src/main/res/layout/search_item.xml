<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="5dp">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/route_three"
                android:paddingRight="5dp"
                android:layout_below="@+id/titlez" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Erding"
                android:id="@+id/titlez"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="lengthz"
                android:id="@+id/lengthz"
                android:paddingLeft="5dp"
                android:layout_below="@+id/titlez"
                android:layout_alignRight="@+id/durationz"
                android:layout_alignEnd="@+id/durationz" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="2 h"
                android:id="@+id/durationz"
                android:paddingLeft="5dp"
                android:layout_below="@+id/lengthz"
                android:layout_alignRight="@+id/difficultyz"
                android:layout_alignEnd="@+id/difficultyz" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Experienced"
                android:id="@+id/difficultyz"
                android:paddingLeft="5dp"
                android:layout_below="@+id/durationz"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3.8/5"
                android:id="@+id/ratingz"
                android:paddingLeft="5dp"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/ratingz"
                android:layout_toStartOf="@+id/ratingz"
                android:src="@android:drawable/star_off" />

        </RelativeLayout>
        </android.support.v7.widget.CardView>


</RelativeLayout>